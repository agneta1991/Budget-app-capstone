<div class='main_div'>
  <nav>
    <div class='burger_menu'>
      <%= link_to groups_path, class: 'back_btn' do %>
        <img class='back_btn' src="https://img.icons8.com/ios/50/ffffff/menu--v7.png" alt="menu--v7"/>
      <% end %>
    </div>
    <p>NEW CATEGORY</p>
    <%= link_to "SIGN OUT", destroy_user_session_path, data: { turbo_method: :delete }, class: 'signout' %>
  </nav>

  <%= form_with(model: @group, url: groups_path, local: true) do |form| %>
    <div class="field">
      <%= form.text_field :name, placeholder: 'Category name' %>
    </div>

    <div class="field">
<div class="field">
  <%= form.select :icon, options_for_select(
    [
      ['Transport', 'https://img.icons8.com/ios/50/000000/car.png'],
      ['Eating Out', 'https://img.icons8.com/ios/50/000000/restaurant.png'],
      ['Bills', 'https://img.icons8.com/ios/50/000000/invoice.png'],
      ['Holiday', 'https://img.icons8.com/ios/50/000000/sunbed.png'], 
    #   fix the link
      ['Family', 'https://img.icons8.com/ios/50/000000/family.png'],
      ['Groceries', 'https://img.icons8.com/ios/50/000000/grocery-store.png'],
      ['Finances', 'https://img.icons8.com/ios/50/000000/bank.png'],
      ['Entertainment', 'https://img.icons8.com/ios/50/000000/clapperboard.png'],
      ['General', 'https://img.icons8.com/ios/50/000000/task.png'],
      ['Personal Care', 'https://img.icons8.com/ios/50/000000/spa.png'],
      ['Other', 'https://img.icons8.com/ios/50/000000/question-mark.png']
    ],
    @group.icon
  ), { prompt: 'Check is your category available, if not please select "Other"' } %>
</div>



    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
